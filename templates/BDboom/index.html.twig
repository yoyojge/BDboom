{% extends 'base.html.twig' %}

{% block title %}Welcome BDboom{% endblock %}

{% block body %}
    
    


<main>

    

    <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
        

        <div id="myCarouselInner" class="carousel-inner">

            <div class="carousel-indicators">
                <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active" aria-current="true"
                    aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                {# <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button> #}
            </div>

            <div class="carousel-item active">
                <img src="./images/Muten-Roshi.jpg " width="100%" height="100%" title="BDboom, gestion de collection de BD" alt="BDboom, rien que pour vous !!!" />

                <div class="container">
                    <div class="carousel-caption">
                    <h1><div class="text-white" style="background-color:#009EE0;opacity: 0.6;">BDboom, rien que pour vous !!!</div></h1>
                    <p  class="text-white" style="background-color:#009EE0;opacity: 0.6;">La solution de gestion de vos collections est maintenant disponible</p>
                    {# <p><a class="btn btn-lg btn-secondary" href="https://bdboom.fr/" >BDboom Cliquez-ici !</a></p> #}
                    </div>
                </div>
            </div>

            <div class="carousel-item">
                <img src="./images/kamehouse.jpg" width="100%" height="100%" title="BDboom, gestion de collection de BD" alt="BDboom, venez nous rejoindre sur le Blog" />

                <div class="container">
                    <div class="carousel-caption text-end">
                    <h1>BDboom Le blog</h1>
                    <p>Grimpez sur le nuage magique et venez nous rejoindre sur le Blog.</p>
                    <p><a class="btn btn-lg btn-primary" href="https://blog.bdboom.fr/">Blog BDboom</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>



    


    <div class="container marketing">

        <!-- Three columns of text below the carousel -->
        <div class="row">
            
            
            <div class="  d-flex col-md-12 col-sm-12  d-lg-block col-lg-4">          
                
                <div class="col-sm-3 col-md-3 col-lg-12">
                    <img src="{{ tabActu['img'] }}" width="140" height="140" title="BDboom, retrouvez l'actualité de la bande dessinée" alt="BDboom actu"  />
                </div>

                <div class="col-sm-9 col-md-9 col-lg-12 ps-4 ps-md-0">
                    <h2 class="fw-normal">{{ tabActu['titre'] }}</h2>
                    <p>{{ tabActu['desc']  }} </p>
                    <p><a class="btn btn-secondary" href="{{ tabActu['lien'] }}">Voir l'article &raquo;</a></p>
                </div>
            
            </div>
        
        
            <div class="  d-flex col-md-12 col-sm-12  d-lg-block col-lg-4">          
                
                <div class="col-sm-3 col-md-3 col-lg-12">               
                    <img src="{{ tabBleu['img'] }}" width="140" height="140"  title="BDboom, retrouvez l'actualité de la bande dessinée" alt="BDboom bleu commme .." />
                </div>

                <div class="col-sm-9 col-md-9 col-lg-12 ps-4 ps-md-0">
                    <h2 class="fw-normal">{{ tabBleu['titre'] }}</h2>
                    <p>{{ tabBleu['desc'] }}</p>
                    <p><a class="btn btn-secondary" href="{{ tabBleu['lien'] }}">Voir l'article &raquo;</a></p>
                </div>
            
            </div>
        
        
 
            <div class="  d-flex col-md-12 col-sm-12  d-lg-block col-lg-4">          
                
                <div class="col-sm-3 col-md-3 col-lg-12">                         
                    <img src="{{ tabBoom['img'] }}" width="140" height="140"  title="BDboom, retrouvez l'actualité de la bande dessinée" alt="BDboom le blog qui fait boom" />
                </div>

                <div class="col-sm-9 col-md-9 col-lg-12 ps-4 ps-md-0">
                    <h2 class="fw-normal">{{ tabBoom['titre'] }}</h2>
                    <p>{{ tabBoom['desc'] }} </p>
                    <p><a class="btn btn-secondary" href="{{ tabBoom['lien'] }}">Voir l'article &raquo;</a></p>
                </div>
            
            </div>

        </div>


    </div>

</main>



    
{% endblock %}
