{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}

<main>
<div id="myCarouselInner" >
<div class="bdboomPaddingMain">
    <h1>Album</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ album.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ album.title }}</td>
            </tr>
            {# <tr>
                <th>Cover</th>
                <td>{{ album.cover }}</td>
            </tr> #}

            <tr>
                <th>Cover</th>
                <td> <img src="/images/book/{{ album.cover }}"  alt="{{ album.title }}" /> </td>
            </tr>

           
            <tr>
                <th>Description</th>
                <td>{{ album.description }}</td>
            </tr>
            <tr>
                <th>RefBDfugues</th>
                <td>{{ album.refBDfugues }}</td>
            </tr>
            <tr>
                <th>RefAmazon</th>
                <td>{{ album.refAmazon }}</td>
            </tr>
            <tr>
                <th>Isbn</th>
                <td>{{ album.isbn }}</td>
            </tr>
        </tbody>
    </table>

    
                    
    {# si on vient d'une collection #}
    {% if collectionId is defined and collectionId is not null %}

    <a href="{{ path('app_BDboom_suppItemToCollectionOrWishlist', {'idAlbum': album.id, 'idCollection': collectionId}) }}">retirer de cette collection</a>

    <a href="{{ path('app_collectionn_show', {'id': collectionId}) }}">back to collection</a>
    {% endif %}

    {# si on vient d'une wishlist #}
    {% if wishlistId is defined and wishlistId is not null %}

    <a href="{{ path('app_BDboom_suppItemToCollectionOrWishlist', {'idAlbum': album.id, 'idWishlist': wishlistId}) }}">retirer de la wishlist</a>

    <a href="{{ path('app_wishlist_show', {'id': wishlistId}) }}">back to wishlist</a>
    {% endif %}


    {# <a href="{{ path('app_album_edit', {'id': album.id}) }}">edit</a> #}

    {# {{ include('album/_delete_form.html.twig') }} #}


</div>
</div>
</main>
{% endblock %}
